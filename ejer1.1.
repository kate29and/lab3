#include <iostream>
#include <fstream>
#include <bitset>

using namespace std;


void metodo1(char * cod,int s);
void metodo2(char * cod,int s);
void prime(char* codi, int s);


int main() {
    
    int s;
    
    cout<<"Ingresar semilla: ";
    cin>>s;
    
    ifstream inputFile("texto.txt");  // modo lectura
    ofstream outputFile("binario.txt"); // modo escritura
    if (!inputFile) {
        cout << "Error al abrir archivo" << endl;  
    }
    
    if (!outputFile) {
        cout << "Error al crear archivo de salida" << endl;
    }
    
    char c,bina[8];
    int a=0, n=0;
    while (inputFile.get(c)){
        a++;
        bitset<8> bits(c);// convertir a binario
        outputFile.write(bits.to_string().c_str(), 8);//write se utiliza para escribir bytes en un archivo
    }
   
    char cod[a*8];
    inputFile.close();
    outputFile.close(); 
    
    cout<<"Ingresa el metodo de codificacion 1 o 2: ";
    cin>>n;
    
    if (n==1){
        metodo1(cod, s);
    }
    else if (n==2){
        metodo2(cod, s);
    }
    
    return 0;

}


void prime(char* codi, int i){ 
    if (codi[i]=='0'){
            codi[i]='1';
            
        }
    else if(codi[i]=='1'){
            codi[i]='0';
        }
}

void metodo1(char * cod, int s) {
  
    ifstream inputFile("binario.txt");  // modo lectura
    
    if (!inputFile) {
        cout << "Error al abrir archivo binario" << endl;  
    }
    
    ofstream outputFile("metodo1.txt"); // modo escritura
    
    if (!outputFile) {
        cout << "Error al crear archivo de salida" << endl;
    }
    int a=0,j=0;
    
    char c; 
    
    while (inputFile.get(c)) { //bits en arreglo
         cod[a]=c;
         a++;
    }
    inputFile.close();
    char codi1[s],codi[s];
    
    while(j<a-s){
        int num0=0,num1=0;
    
        for(int i=0;i<s;i++){ //copia
            codi[i]=cod[j];
            if(codi[i]=='0'){
                num0++;
            }
            else if(codi[i]=='1'){
                num1++;
            }
            j++;
            
        }
        
        for(int i=0;i<s;i++){ 
            codi1[i]=cod[j];
            j++;
        }
        j-=s; 
        
        if (j<=s){
           for (int i=0;i<s;i++){
            prime(codi, i);
            } 
            outputFile.write(codi, s);
        }
        
        if(num0==num1){
            for (int i=0;i<s;i++){
                prime(codi1, i);
            }
             outputFile.write(codi1, s);    
            
        }
        else if(num0>num1){
            for (int i = 1; i < s; i+=2) {
                prime(codi1,i);   
            }
            outputFile.write(codi1, s);
            
        }
        
        else if (num1>num0){
            for (int i = 2; i < s; i+=3) {
                prime(codi1,i);    
            }
            outputFile.write(codi1, s);
            
        }
        
       
    }
   
    outputFile.close();
}

void metodo2(char * cod, int s) {
  
    ifstream inputFile("binario.txt");  // modo lectura
    
    if (!inputFile) {
        cout << "Error al abrir archivo binario" << endl;  
    }
    
    ofstream outputFile("metodo2.txt"); // modo escritura
    
    if (!outputFile) {
        cout << "Error al crear archivo de salida" << endl;
    }
    int a=0,j=0;
    
    char c; 
    
    while (inputFile.get(c)) { //bits en arreglo
         cod[a]=c;
         a++;
    }
    inputFile.close();
    char codi1[s],codi[s];
    while(j<a){
        for(int i=0;i<s;i++){ //copia
            codi[i]=cod[j];
            j++;
            cout<<codi[i];
        }
        for(int i=0;i<s;i++){
            if(i==0){
                codi1[i]=codi[s-1];
            }
            else{
               codi1[i]=codi[i-1]; 
            }
            
        }
        outputFile.write(codi1, s);
    }
}
